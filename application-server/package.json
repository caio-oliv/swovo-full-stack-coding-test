{
	"name": "application-server",
	"version": "1.0.0",
	"description": "Application server",
	"author": "Caio Oliveira <caio.vsoliveira23@gmail.com>",
	"license": "MIT",
	"keywords": [],
	"type": "module",
	"source": "src/main.ts",
	"main": "build/main.js",
	"scripts": {
		"start": "node build/main.js",
		"start:dev": "nodemon --ext ts,json --watch src --exec 'run-z build start'",
		"build": "run-z clear:build build:js",
		"build:js": "rollup --config rollup.config.ts --configPlugin typescript",
		"check": "run-z check:lint,check:type test",
		"check:lint": "eslint . --ext ts,json",
		"check:type": "tsc --noEmit",
		"test": "vitest run",
		"test:cov": "vitest run --coverage",
		"clear": "rimraf build coverage",
		"clear:build": "rimraf build",
		"clear:coverage": "rimraf coverage"
	},
	"dependencies": {
		"@fastify/cors": "^11.2.0",
		"@nestjs/common": "^11.1.12",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.12",
		"@nestjs/platform-fastify": "^11.1.12",
		"date-fns": "^4.1.0",
		"fastify": "5.6.2",
		"knex": "^3.1.0",
		"pg": "^8.17.2",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@rollup/plugin-typescript": "^12.3.0",
		"@types/node": "^25.0.10",
		"@vitest/coverage-v8": "4.0.18",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.5",
		"jiti": "^2.6.1",
		"nodemon": "^3.1.11",
		"prettier": "^3.8.1",
		"rimraf": "^6.1.2",
		"rollup": "^4.56.0",
		"rollup-plugin-esbuild": "^6.2.1",
		"run-z": "^2.1.0",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1",
		"vitest": "^4.0.18"
	},
	"packageManager": "pnpm@10.21.0"
}
